<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/investigacion1_2"
    tools:context="memex.interfaz.ArticuloActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="1280dp"
        android:layout_height="wrap_content"
        android:minHeight="620dp"
        android:minWidth="600dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="395dp"
            android:layout_marginTop="230dp"
            android:src="@drawable/trespuntos" />

        <Button
            android:id="@+id/nodoTerciario"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="880dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/libro32x23"
            android:padding="10dp"
            android:text="Mina" />

        <Button
            android:id="@+id/nodoPrincipal"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/imagen_grande"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="Árbol de Pittsburg" />

        <Button
            android:id="@+id/nodoSecundario"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/video30x32"
            android:padding="10dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="100dp"
            android:text="Arbolera"/>

        <Button
            android:id="@+id/nodoSecundario3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/video30x32"
            android:padding="10dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="1000dp"
            android:text="Gran Samán Naguanagua"/>

        <Button
            android:id="@+id/nodoSecundario4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/video30x32"
            android:padding="10dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="1030dp"
            android:text="Roble negro"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="945dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/trespuntos" />

        <Button
            android:id="@+id/nodoSecundario2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/back__nodos_investigacion"
            android:drawableLeft="@drawable/libro32x23"
            android:layout_marginLeft="750dp"
            android:layout_marginTop="485dp"
            android:padding="10dp"
            android:text="Árbol de patria" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_marginTop="600dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/share90x85" />

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_above="@+id/imageButton3"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="30dp"
            android:alpha="0.5"
            android:background="#B3B3B3"
            android:text="Filtro" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:paddingBottom="80dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/esquema82x82" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toRightOf="@+id/button1"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/favorito_vacio82x79" />

        <LinearLayout
            android:id="@+id/filtLin"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignLeft="@+id/button1"
            android:alpha="0.5"
            android:background="@drawable/back_linea"
            android:orientation="vertical"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/todos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos" />

            <TextView
                android:id="@+id/prioridad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangle_borderlines"
                android:padding="5dp"
                android:text="Prioridad"
                android:textAppearance="?android:attr/textAppearanceButton" />

            <CheckBox
                android:id="@+id/verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/circulo_verde" />

            <CheckBox
                android:id="@+id/amarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/circulo_amarillo" />

            <CheckBox
                android:id="@+id/rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/circulo_rojo37x37" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangle_borderlines"
                android:padding="5dp"
                android:text="Tipo"
                android:textAppearance="?android:attr/textAppearanceButton" />

            <CheckBox
                android:id="@+id/imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/imagen32x26" />

            <CheckBox
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/video30x32" />

            <CheckBox
                android:id="@+id/nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/nota24x32" />

            <CheckBox
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/audio" />

            <CheckBox
                android:id="@+id/libro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableRight="@drawable/libro32x23" />
        </LinearLayout>

    </RelativeLayout>

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:content="@+id/content"
        android:handle="@+id/handle" >

        <LinearLayout
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dentroHandle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/clipboard71x71" />

            <Button
                android:id="@+id/lineaHandle"
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="3dp"
                android:background="#CC87CEFA" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCEBEBEB" >

            <LinearLayout
                android:id="@+id/content_inside"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#CCEBEBEB" >

                <ImageButton
                    android:id="@+id/content_inside3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_column="0"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/tree_article_image500x189" />

                <ImageButton
                    android:id="@+id/content_inside9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="-335dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/arriba_arbol_blanco" />

                <ImageButton
                    android:id="@+id/content_inside4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ballet_pic_222x300" />

                <ImageButton
                    android:id="@+id/content_inside5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="-152dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:src="@drawable/ballet_pic_arriba_porta" />
            </LinearLayout>
        </HorizontalScrollView>
    </SlidingDrawer>


</RelativeLayout>