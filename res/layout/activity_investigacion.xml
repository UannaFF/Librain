<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/investigacion1_2"
    tools:context="memex.interfaz.ArticuloActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="600dp"
         >

        <RelativeLayout
            android:layout_width="1280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom|left"
            android:minHeight="620dp"
            android:minWidth="600dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageButton3"
                android:layout_marginTop="100dp"
                android:alpha="0.5"
                android:background="@android:color/transparent"
                android:src="@drawable/share90x85" />

            <LinearLayout
                android:id="@+id/filtLin"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button1"
                android:layout_alignLeft="@+id/button1"
                android:alpha="0.5"
                android:background="@drawable/back_linea"
                android:orientation="vertical"
                android:visibility="visible" >

                <CheckBox
                    android:id="@+id/todos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos" />

                <TextView
                    android:id="@+id/prioridad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_rectangle_borderlines"
                    android:padding="5dp"
                    android:text="Prioridad"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <CheckBox
                    android:id="@+id/verde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/circulo_verde" />

                <CheckBox
                    android:id="@+id/amarillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/circulo_amarillo" />

                <CheckBox
                    android:id="@+id/rojo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/circulo_rojo37x37" />

                <TextView
                    android:id="@+id/prioridad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_rectangle_borderlines"
                    android:padding="5dp"
                    android:text="Tipo"
                    android:textAppearance="?android:attr/textAppearanceButton" />

                <CheckBox
                    android:id="@+id/imagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/imagen32x26" />

                <CheckBox
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/video30x32" />

                <CheckBox
                    android:id="@+id/nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/nota24x32" />

                <CheckBox
                    android:id="@+id/voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/audio" />

                <CheckBox
                    android:id="@+id/libro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/libro32x23" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nodoSecundario2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="90dp"
                android:alpha="0.5"
                android:background="@android:color/transparent"
                android:src="@drawable/esquema82x82" />

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageButton3"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="30dp"
                android:alpha="0.5"
                android:background="#B3B3B3"
                android:text="Filtro" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_toRightOf="@+id/button1"
                android:alpha="0.5"
                android:background="@android:color/transparent"
                android:src="@drawable/favorito_vacio82x79" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/nodoSecundario2"
                android:layout_marginLeft="227dp"
                android:layout_toRightOf="@+id/nodoPrincipal"
                android:src="@drawable/trespuntos" />

            <Button
                android:id="@+id/nodoTerciario"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/button1"
                android:layout_marginRight="109dp"
                android:background="@drawable/back__nodos_investigacion"
                android:drawableLeft="@drawable/libro32x23"
                android:gravity="center"
                android:padding="10dp"
                android:text="Mina" />

            <Button
                android:id="@+id/nodoPrincipal"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back__nodos_investigacion"
                android:drawableLeft="@drawable/imagen_grande"
                android:gravity="center"
                android:padding="10dp"
                android:text="Árbol de Pittsburg" />

            <Button
                android:id="@+id/nodoSecundario"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/back__nodos_investigacion"
                android:drawableLeft="@drawable/video30x32"
                android:gravity="center"
                android:padding="10dp"
                android:text="Arbolera" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="123dp"
                android:src="@drawable/trespuntos" />

            <Button
                android:id="@+id/nodoSecundario2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="86dp"
                android:layout_toRightOf="@+id/imageButton1"
                android:background="@drawable/back__nodos_investigacion"
                android:drawableLeft="@drawable/libro32x23"
                android:gravity="center"
                android:padding="10dp"
                android:text="Árbol de patria" />

        </RelativeLayout>

    </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>